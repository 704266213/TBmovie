<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="4dp"
    android:paddingEnd="4dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/cartoonImage"
        android:layout_width="@dimen/placeholder_horizontal_width"
        android:layout_height="@dimen/placeholder_horizontal_height"
        android:contentDescription="@null"
        android:scaleType="center"
        tools:background="@drawable/placeholder_horizontal"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_alignBaseline="@id/cartoonImage"
        android:gravity="left"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:lines="1"
        android:layout_marginBottom="12dp"
        android:ellipsize="end"
        android:textColor="#434343"
        android:textSize="12sp"/>



</LinearLayout>