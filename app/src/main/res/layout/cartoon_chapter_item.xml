<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingTop="4dp">

    <ImageView
        android:id="@+id/cartoonImage"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/cartoon_info_category_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:minHeight="20dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="灵异"
        android:textColor="@color/film_tab_text_color"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@id/cartoonImage"
        app:layout_constraintTop_toTopOf="@id/cartoonImage" />

    <TextView
        android:id="@+id/updatedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/cartoon_info_category_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:minHeight="20dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="灵异"
        android:textColor="@color/film_tab_text_color"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/cartoonImage"
        app:layout_constraintLeft_toRightOf="@id/cartoonImage" />

    <TextView
        android:id="@+id/likesCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/cartoon_info_category_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:minHeight="20dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="灵异"
        android:textColor="@color/film_tab_text_color"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/updatedTime"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>